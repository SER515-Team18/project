 <html>
        <head>
                <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        </head>
        <body>
           <nav class="navbar navbar-dark bg-dark">
           <h2 class="text-white h2">View Homeworks</h2>
           <a class="navbar-brand" href="/users/teacherdashboard"  style=" text-align: center; display: block;">
           Go to Dashboard
           </a>
       </nav>
           <div class="container">
              <div id="accordion" style="margin-top: 5%">
                 <div class="card">
                    <div class="card-header" id="headingOne">
                       <h5 class="mb-0">
                          <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                          Grade 1
                          </button>
                       </h5>
                    </div>
                    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
                       <div class="card-body" style="text-align: center;">
                          <% Homework.forEach(function(homework){ %>
                              <% if (homework.grade == "1") { %>
                                 <button type="button" class="btn btn-info"><a href="/users/displayHomeworkTeacher/<%= homework._id %>" style="color:#FFFFFF;"><%= homework.title %></a></button>
                             <% } %>
                         <% }); %>
                       </div>
                    </div>
                 </div>
                 <div class="card">
                    <div class="card-header" id="headingTwo">
                       <h5 class="mb-0">
                          <button class="btn btn-link" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                          Grade 6
                          </button>
                       </h5>
                    </div>
                    <div id="collapseTwo" class="collapse show" aria-labelledby="headingTwo" data-parent="#accordion">
                       <div class="card-body" style="text-align: center;">
                           <% Homework.forEach(function(homework){ %>
                              <% if (homework.grade == "6") { %>
                                 <button type="button" class="btn btn-info"><a href="/users/displayHomeworkTeacher/<%= homework._id %>" style="color:#FFFFFF;"><%= homework.title %></a></button>
                             <% } %>
                         <% }); %>
                       </div>
                    </div>
                 </div>
                 </div>
              </div>
           </div>
        </body>
     </html>