<div style="padding: 10%;">
<p>Update user</p>
<% include ./partials/messages %>

<form action="/users/updateUser/<%= user._id %>" method="POST">
    <div class="form-group">
      <label for="name">Name</label>
      <input
        type="name"
        id="name"
        name="name"
        class="form-control"
        placeholder= <%= user.name %>
        value="<%= typeof name != 'undefined' ? name : user.name %>"
      />
    </div>
    <div class="form-group">
      <label for="email">Email</label>
      <input
        type="email"
        id="email"
        name="email"
        class="form-control"
        placeholder=  <%= user.email %>
        value="<%= typeof email != 'undefined' ? email : user.email %>"
      />
    </div>
        <div class="form-group">
      <label for="grade">Grade</label>
      <input
        type="grade"
        id="grade"
        name="grade"
        class="form-control"
        placeholder=  <%= user.grade %>
        value="<%= typeof grade != 'undefined' ? grade : user.grade %>"
      />
    </div>
    <button type="submit" class="btn btn-secondary btn-block">
      Update
    </button>
  </form>
</div> 