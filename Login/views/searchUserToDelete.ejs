<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h3 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Search User to delete
        </h3>
        <% include ./partials/messages %>
        <form action="/users/searchUserToDelete" method="POST">
          <div class="form-group">
            <label for="name">Enter user email to be deleted</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter email"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div>
            <button type="submit" class="btn btn-secondary btn-block">
            Search
          </button>
        </form>
       
        
        
      </div>
    </div>
  </div>