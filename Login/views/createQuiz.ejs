<html>

<head>
    <title>Homework</title>
</head>
<body>
    <div>
        <h1>
            <center>Create Homework</center>
         </h1>
        <br/>
        <center>
            <% include ./partials/messages %>
            <form action="/users/createQuiz" method="POST">
               <div class="form-group">
                  <label for="title">Enter title</label>
                  <input
                    type="title"
                    id="title"
                    name="title"
                    class="form-control"
                    placeholder="Enter Title"
                    value="<%= typeof title != 'undefined' ? title : '' %>"
                  />
               </div>
               <div class="form-group">
                  <label for="grade">Select Grade</label>
                  <select name="gradeType" id = "gradeType">
                     <option value="Grade1">Grade 1</option>
                     <option value="Grade6">Grade 6</option>
                  </select>
               </div>  
               <div class="form-group">
                  <label for="question">Enter Question</label>
                  <input
                     type="question"
                     id="question"
                     name="question"
                     class="form-control"
                     placeholder="Enter Question"
                     value="<%= typeof question != 'undefined' ? question : '' %>"
                  />
               </div>
               <div class="form-group">
                     <label for="answer">Enter Answer</label>
                     <input
                       type="answer"
                       id="answer"
                       name="answer"
                       class="form-control"
                       placeholder="Enter Answer"
                       value="<%= typeof answer != 'undefined' ? answer : '' %>"
                     />
               </div>
                    <button type="submit"class="btn btn-primary btn-block" value="Add Question">
                        Add Question
                      </button>
            </form>
    </div>
</body>

</html>