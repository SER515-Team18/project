<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h3 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Register
      </h3>
      <% include ./partials/messages %>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input
            type="name"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter Name"
            value="<%= typeof name != 'undefined' ? name : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>
		    
        <div class="form-group">
          <label for="grade">Select Role</label>
          <select type="grade" name="grade" id ="grade">
             <option value="Grade1">Grade 1 Student</option>
             <option value="Grade6">Grade 6 Student</option>
             <option value="teacher">Teacher</option>
          </select>
       </div>  

        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirm Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
          />
        </div>
        <button type="submit" class="btn btn-secondary btn-block">
          Submit
        </button>
      </form>
      <p class="lead mt-4" style="display: none;">Have An Account? <a href="/users/login">Login</a></p>
    </div>
  </div>
</div>